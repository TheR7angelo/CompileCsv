<mah:MetroWindow x:Class="CompileCsv.Views.ProgressDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:CompileCsv.Views"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 WindowStartupLocation="CenterOwner"
                 ShowMinButton="False"
                 ShowMaxRestoreButton="False"
                 
                 TitleCharacterCasing="Normal"
                 
                 Height="100"
                 Width="800"
                 
                 Activated="ProgressDialog_OnActivated"
                 Closing="ProgressDialog_OnClosing">
    <Grid>
        <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0:0}%}"/>
    </Grid>
</mah:MetroWindow>
